{
  "name": "hyde-js",
  "version": "1.0.0",
  "description": "A Jekyll-like static site generator using Node.js",
  "author": "",
  "license": "MIT",
  "type": "commonjs",
  "scripts": {
    "start": "npm run clean && npm run serve",
    "serve": "parcel --port 4000 --dist-dir _site --target serve",
    "build": "npm run clean && parcel build --target serve",
    "clean": "rm -rf .parcel-cache/ && rm -rf _site"
  },
  "keywords": [
    "static site generator",
    "hydejs",
    "liquidjs",
    "front matter",
    "blog",
    "web app"
  ],
  "workspaces": [
    "packages/*"
  ],
  "targets": {
    "serve": {
      "context": "browser",
      "engines": {
        "browserslist": "last 2 Chrome versions"
      },
      "outputFormat": "global",
      "scopeHoist": true,
      "isLibrary": false,
      "optimize": true,
      "includeNodeModules": false,
      "sourceMap": true,
      "source": "src/**/*.*",
      "distDir": "_site",
      "publicUrl": "/"
    },
    "build": {
      "context": "browser",
      "engines": {
        "browserslist": "> 0.5%, last 2 versions, not dead"
      },
      "outputFormat": "global",
      "scopeHoist": true,
      "isLibrary": false,
      "optimize": true,
      "includeNodeModules": false,
      "sourceMap": false,
      "source": "src/**/*.*",
      "distDir": "./_site",
      "publicUrl": "/"
    }
  },
  "dependencies": {
    "jspdf": "^3.0.1",
    "jszip": "^3.10.1",
    "pdfjs-dist": "^5.3.31"
  },
  "devDependencies": {
    "@parcel/transformer-coffeescript": "^2.15.4",
    "@parcel/transformer-sass": "^2.15.4",
    "@parcel/transformer-toml": "^2.15.4",
    "@parcel/transformer-yaml": "^2.15.4",
    "buffer": "^6.0.3",
    "concurrently": "^9.2.0",
    "events": "^3.3.0",
    "parcel": "^2.15.4",
    "parcel-transformer-liquid-fm": "^1.0.0",
    "parcel-transformer-markdown": "^3.0.1",
    "path-browserify": "^1.0.1",
    "process": "^0.11.10",
    "stream-browserify": "^3.0.0",
    "string_decoder": "^1.3.0",
    "url": "^0.11.4"
  }
}
